<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP01.MainPage"
             Background="Black">
    <VerticalStackLayout HorizontalOptions="Center">
        <Label Text="Aplicação Teste" FontSize="Large"></Label>
        <HorizontalStackLayout>
            <Label Text="ID: " TextColor="White" VerticalOptions="Center"></Label>
            <Entry x:Name="idEntry" Placeholder="Digite o ID" TextColor="White"></Entry>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Senha: " TextColor="White" VerticalOptions="Center"></Label>
            <Entry x:Name="senhaEntry" Placeholder="Digite a senha" TextColor="White"></Entry>
        </HorizontalStackLayout>
        <VerticalStackLayout Spacing="20">
            <Button Text="OK" Clicked="OkClickButton"></Button>
            <Button Text="Limpar" Clicked="LimparClickButton"></Button>
            <Button Text="Créditos" Clicked="CreditosClickButton"></Button>
        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentPage>
